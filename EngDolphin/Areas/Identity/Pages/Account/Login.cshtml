@page
@model EngDolphin.Areas.Identity.Pages.Account.LoginModel
    <head>
        @*<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
        <style>
            #fullContainer{
                 display: flex;
                justify-content: center;
                align-items: center;
                width:100%;
                height:100%;
                overflow:auto;
            }
            #loginPage {
                display: flex;
                justify-content: center;
                align-items: center;
                background-image: url('/../images/oldHouseWindow.jpeg');
                height: 60%;
                width: 40%;
            }

            #loginContainer {
                display: flex;
                position: absolute;
                justify-content: center;
                align-items: center;
                opacity: 0.4;
                background-color: white;
                color: black;
                height: 100%;
                width: 100%;
                overflow:auto;
            }

            #loginForm {
                display: flex;
                position: relative;
                justify-content: center;
                align-items: center;
                color: blue;
            }

            #translucent {
                background-color: white;
            }

            #centerBoth {
                display: flex;
                justify-content: center;
                align-items: center;
                width: 100%;
            }
            #validaColor{
                background-color:black;
            }
        </style>
    </head>
    
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <div id="fullContainer">
            <div id="loginPage" class="row">
                <div id="loginContainer"></div>
                <div id="loginForm" class="col-md-12">
                    <section>
                        <form id="account" method="post">
                            <h4>Use a local account to log in.</h4>
                            <hr />
                            <div id="validaColor" asp-validation-summary="All" class="text-danger"></div>
                            @{
                                if (Model.ShowResend)
                                {
                                    <p>
                                        <a style="color:blue" asp-page="./UnconfirmedEmail">Resend verification?</a>
                                    </p>
                                }
                            }
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span id="validaColor" asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span id="validaColor" asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class=" form-group">
                                <button id="centerBoth" type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <a id="forgot-password" style="color:blue" asp-page="./ForgotPassword">Password recovery</a>
                                </div>
                                <div class="col-md-6">
                                    <a style="color:blue" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registration</a>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
  
